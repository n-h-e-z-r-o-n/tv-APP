<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:name=".OnyxApplication"
        android:allowBackup="true"
        android:banner="@mipmap/ic_launcher"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Onyx.Dark"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".PayWall"
            android:exported="false" />
        <activity
            android:name=".Notification_Page"
            android:exported="false" />
        <activity
            android:name=".Favorite_Page"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".Search_Page"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".Actor_Page"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".Tv_Page"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".Movie_Page"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".Home_Page"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".Profile_Page"
            android:exported="false" />
        <activity
            android:name=".TermsAndConditionsActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".Video_payer"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".Play"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name=".Watch_Page"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- FileProvider for secure file sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>