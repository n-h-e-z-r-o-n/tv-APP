<!-- res/layout/item_grid.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/grid_item_width"
    android:layout_height="@dimen/grid_item_height"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    android:foreground="@drawable/card_focus"
    android:id="@+id/CardViewcontiner"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/BG_color_up">


        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginBottom="9dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="3dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="?attr/AccentColor"
            android:elevation="0dp"
            android:layout_marginStart="4dp"
            >

            <TextView
                android:id="@+id/cardType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingHorizontal="3dp"
                android:maxLines="1"
                android:text="Tv"
                android:singleLine="true"
                android:textColor="?attr/BG_color"
                android:textSize="7sp"
                android:fontFamily="@font/k"
                tools:ignore="HardcodedText,SmallSp,Suspicious0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="3dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="?attr/BG_color_up"
            android:elevation="0dp"
            android:layout_marginStart="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="3dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_sub"
                    app:tint="?attr/FG_color"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/cardSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="2"
                    android:singleLine="true"
                    android:textColor="?attr/FG_color"
                    android:textSize="9sp"
                    tools:ignore="HardcodedText,SmallSp,Suspicious0dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="3dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="?attr/SidebarFocus"
            android:elevation="0dp"
            android:layout_marginStart="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="3dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >


            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_dub"
                app:tint="?attr/FG_color"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/cardDub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2"
                android:singleLine="true"
                android:textColor="?attr/FG_color"
                android:textSize="9sp"
                tools:ignore="HardcodedText,Suspicious0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>




    </FrameLayout>

</androidx.cardview.widget.CardView>