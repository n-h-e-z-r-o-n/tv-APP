<!-- res/layout/item_grid.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:nextFocusDown="@id/SliderButton"
    android:nextFocusUp="@id/SliderButton">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/SliderBackdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/overlay_bottom_gradient"
            android:orientation="horizontal"
            android:layout_gravity="end" />

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:background="@drawable/overlay_left_gradient"
            android:orientation="horizontal"
            android:layout_gravity="start" />



        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SliderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:maxLines="3"
                android:singleLine="false"
                android:text="Sakamoto Days Part 2"
                android:textColor="?attr/FG_color"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/tre"
                android:shadowColor="#80000000"
                android:shadowDx="5"
                android:shadowDy="6"
                android:shadowRadius="4"
                tools:ignore="HardcodedText,Suspicious0dp"/>

                <TextView
                    android:id="@+id/SliderGenre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Action"
                    android:singleLine="false"
                    android:textColor="?attr/FG_color"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText,Suspicious0dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="9dp"
                    android:fontFamily="sans-serif"
                    android:alpha="0.8"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"

                    android:gravity="center">


                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="100dp"
                        android:layout_gravity="center_horizontal"
                        app:cardBackgroundColor="?attr/AccentColor"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="HD"
                            android:singleLine="true"
                            android:textColor="?attr/BG_color"
                            android:textSize="11sp"
                            tools:ignore="HardcodedText,Suspicious0dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            />

                    </androidx.cardview.widget.CardView>





                        <TextView
                            android:id="@+id/SliderPg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="PG-13"
                            android:singleLine="true"
                            android:textColor="?attr/FG_color"
                            android:textSize="10sp"
                            tools:ignore="HardcodedText,SmallSp,Suspicious0dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_marginStart="9dp"


                            />




                    <TextView
                        android:id="@+id/SliderType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Mv"
                        android:singleLine="true"
                        android:textColor="?attr/FG_color"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText,Suspicious0dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginStart="9dp"
                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_stars"
                            app:tint="?attr/AccentColor"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/SliderRating"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="9.7"
                            android:singleLine="false"
                            android:textColor="?attr/FG_color"
                            android:textSize="13sp"
                            tools:ignore="HardcodedText,Suspicious0dp"
                            android:gravity="center"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/SliderYear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="2025"
                        android:singleLine="false"
                        android:textColor="?attr/FG_color"
                        android:textSize="13sp"
                        tools:ignore="HardcodedText,Suspicious0dp"
                        android:gravity="center"
                        android:layout_marginStart="9dp"/>


                </LinearLayout>




                <TextView
                    android:id="@+id/SliderOverview"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="bottom"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:textColor="?attr/FG_color"
                    android:textSize="13sp"
                    android:layout_marginBottom="20dp"
                    tools:ignore="Suspicious0dp"
                   />



            <LinearLayout
                android:id="@+id/SliderButton"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/tv_button_selector"
                android:nextFocusLeft="@+id/sideBar"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_play"
                    app:tint="?attr/FG_color"
                    tools:ignore="ContentDescription" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Watch Now"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:layout_marginStart="2dp"
                    tools:ignore="HardcodedText,SmallSp"
                    />

            </LinearLayout>






        </LinearLayout>


    </FrameLayout>



</androidx.cardview.widget.CardView>
