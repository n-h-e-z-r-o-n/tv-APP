<!-- res/layout/item_grid.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:nextFocusDown="@id/SliderButton"
    android:nextFocusUp="@id/SliderButton">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/SliderBackdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/overlay_bottom_gradient"
            android:orientation="horizontal"
            android:layout_gravity="right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/overlay_left_gradient"
            android:orientation="horizontal"
            android:layout_gravity="right" />



        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/SliderTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="Sakamoto Days Part 2"
                    android:singleLine="false"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    tools:ignore="Suspicious0dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    />
                <TextView
                    android:id="@+id/SliderGenre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Action"
                    android:singleLine="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    tools:ignore="Suspicious0dp"
                    android:textStyle="bold"
                    android:paddingEnd="5dp"
                    android:paddingStart="0dp"
                    android:fontFamily="sans-serif"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/SliderType"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:ellipsize="end"
                        android:maxLines="7"
                        android:text="Mv"
                        android:singleLine="false"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        tools:ignore="Suspicious0dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingEnd="15dp"
                        android:paddingStart="0dp"
                        />

                    <TextView
                        android:id="@+id/SliderRating"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:ellipsize="end"
                        android:maxLines="7"
                        android:text="9.7 imdb"
                        android:singleLine="false"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        tools:ignore="Suspicious0dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        />
                    <TextView
                        android:id="@+id/SliderYear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="2025"
                        android:singleLine="false"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        tools:ignore="Suspicious0dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        />


                </LinearLayout>




                <TextView
                    android:id="@+id/SliderOverview"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="bottom"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:layout_marginBottom="20dp"
                    tools:ignore="Suspicious0dp"
                   />



            <Button
                android:id="@+id/SliderButton"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/tv_button_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="â–¶ Watch Now"
                android:clickable="true"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />






        </LinearLayout>


    </FrameLayout>



</androidx.cardview.widget.CardView>
