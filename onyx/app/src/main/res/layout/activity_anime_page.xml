<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anime_Page"
    android:background="?attr/BG_color">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:paddingStart="41dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="RtlSymmetry"
        android:nextFocusLeft="@id/btnHome">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:overScrollMode="never">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/Section1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/spotlightAnimes"
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:clipToPadding="false"
                        android:descendantFocusability="beforeDescendants"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:maxHeight="450dp"
                        android:nextFocusLeft="@id/btnMovies"
                        android:nextFocusDown="@+id/Anime_Trending_widget"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        tools:ignore="RtlSymmetry" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:text=" Trending Anime"
                            android:textStyle="bold"
                            android:fontFamily="@font/d"
                            android:textSize="13sp"
                            android:textColor="?attr/AccentColor"
                            tools:ignore="HardcodedText" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/Anime_Trending_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            tools:ignore="NestedWeights"
                            android:nextFocusUp="@+id/spotlightAnimes"
                            android:nextFocusDown="@+id/Anime_Airing_widget"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Top Airing Anime"
                            android:textStyle="bold"
                            android:fontFamily="@font/d"
                            android:textSize="13sp"
                            android:textColor="?attr/AccentColor"
                            tools:ignore="HardcodedText"
                            android:layout_marginTop="10dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/Anime_Airing_widget"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:overScrollMode="never"
                            android:scrollbars="none"
                            tools:ignore="NestedWeights"
                            android:nextFocusUp="@+id/Anime_Trending_widget"
                            android:nextFocusDown="@+id/Anime_Airing_widget"/>

                    </LinearLayout>

                </LinearLayout>







            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/searchContainerAnime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/BG_color"
        android:layout_marginStart="41dp"
        android:orientation="vertical"
        android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anime Search Results"
        android:textStyle="bold"
        android:fontFamily="@font/d"
        android:textSize="13sp"
        android:textColor="?attr/AccentColor"
        tools:ignore="HardcodedText"
        android:layout_marginTop="70dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/AnimeSearch_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:ignore="NestedWeights"
        android:nextFocusUp="@+id/Anime_Trending_widget"
        android:nextFocusDown="@+id/Anime_Airing_widget"/>

   </LinearLayout>


    <LinearLayout
        android:id="@+id/searchBarAnime"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="51dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:focusableInTouchMode="true">

        <!-- Search Icon -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"
            app:tint="?attr/FG_color" />

        <!-- Space -->
        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <!-- Search Text Input -->
        <EditText
            android:id="@+id/AnimeSearchInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Search Anime..."
            android:textColor="?attr/FG_color"
            android:textColorHint="?attr/FG_color"
            android:padding = "9dp"
            android:inputType="text"
            android:singleLine="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@+id/AnimeSearchInput"
            android:nextFocusRight="@+id/AnimeSearchInput"
            android:nextFocusUp="@+id/AnimeSearchInput"
            android:nextFocusDown="@+id/cardButton"
            android:background="@drawable/search_background"
            android:imeOptions="actionSearch"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <include layout="@layout/side_bar" android:id="@+id/Animeside_bar"/>


</FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>