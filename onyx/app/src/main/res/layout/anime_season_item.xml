<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_margin="6dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:foreground="@drawable/item_episode_focus"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/BG_color_up">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/SeasonImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription"
        android:scaleType="centerCrop"
        android:src="@raw/test2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#99000000"
        android:orientation="vertical"
        android:gravity="center"/>

    <TextView
        android:id="@+id/SeasonTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxLines="2"
        android:ellipsize="end"
        android:padding="4dp"
        android:text="Season 1"
        android:textColor="?attr/FG_color"
        android:fontFamily="@font/e"
        android:textSize="15sp"
        tools:ignore="HardcodedText,Suspicious0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold" />


</FrameLayout>

</androidx.cardview.widget.CardView>