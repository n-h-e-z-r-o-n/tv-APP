<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/BG_color"
    tools:context=".Watch_Anime_Page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="?attr/BG_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@raw/test2"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:id="@+id/blurContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#97000000"
                    android:orientation="vertical"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/overlay_bottom_gradient"
                    android:layout_gravity="bottom"/>



            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/WatchImage"
                    android:layout_height="250dp"
                    android:layout_width="170dp"
                    tools:ignore="ContentDescription"
                    android:layout_margin="15dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/watchTitle" android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:fontFamily="@font/f"
                        android:text=""
                        android:textColor="?attr/FG_color"
                        tools:ignore="HardcodedText"
                        android:shadowColor="#80000000"
                        android:shadowDx="5"
                        android:shadowDy="6"
                        android:shadowRadius="4"/>


                    <TextView
                        android:id="@+id/watchGenres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="10sp"
                        android:fontFamily="@font/e"
                        android:text=""
                        android:textColor="?attr/FG_color"
                        tools:ignore="HardcodedText,SmallSp" />





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/watchRating"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="?attr/FG_color"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText,SmallSp,Suspicious0dp"  />




                        <TextView
                            android:id="@+id/watchType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:singleLine="true"
                            android:textColor="?attr/FG_color"
                            android:textSize="10sp"
                            android:alpha="0.7"
                            tools:ignore="HardcodedText,SmallSp,Suspicious0dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginStart="12dp"
                            />



                        <TextView
                            android:id="@+id/watchRuntime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_marginStart="9dp"
                            android:text=""
                            android:singleLine="false"
                            android:textColor="?attr/FG_color"
                            android:textSize="10sp"
                            android:textStyle="italic"
                            android:alpha="0.7"
                            tools:ignore="HardcodedText,SmallSp,Suspicious0dp"
                            android:gravity="center"/>



                        <TextView
                            android:id="@+id/watchYear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:singleLine="false"
                            android:textColor="?attr/FG_color"
                            android:textSize="10sp"
                            android:textStyle="italic"
                            tools:ignore="HardcodedText,SmallSp,Suspicious0dp"
                            android:gravity="center"
                            android:alpha="0.7"
                            android:layout_marginStart="9dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="5dp"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="?attr/AccentColor"
                            android:elevation="0dp"
                            android:layout_marginStart="10dp"
                            >

                            <TextView
                                android:id="@+id/watchQuality"
                                android:layout_width="11dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="?attr/BG_color"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,Suspicious0dp" />

                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="5dp"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="?attr/BG_color_up"
                            android:elevation="0dp"
                            android:layout_marginStart="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                >


                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_sub"
                                    app:tint="?attr/FG_color"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/watchSub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text=""
                                    android:singleLine="true"
                                    android:textColor="?attr/FG_color"
                                    android:textSize="10sp"
                                    tools:ignore="HardcodedText,Suspicious0dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="5dp"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="?attr/SidebarFocus"
                            android:elevation="0dp"
                            android:layout_marginStart="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:orientation="horizontal"
                                >


                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:src="@drawable/ic_dub"
                                    app:tint="?attr/FG_color"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:id="@+id/watchDub"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text=""
                                    android:singleLine="true"
                                    android:textColor="?attr/FG_color"
                                    android:textSize="10sp"
                                    tools:ignore="HardcodedText,SmallSp,Suspicious0dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/watchOverview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textColor="?FG_color"
                        android:textSize="10sp"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SeasonTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Watch more seasons of this anime"
                android:textColor="?attr/AccentColor"
                android:paddingHorizontal="5dp"
                android:textSize="23sp"
                android:textStyle="bold"
                android:fontFamily="@font/e"
                tools:ignore="HardcodedText" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:clipToPadding="false">
                <LinearLayout
                    android:id="@+id/anime_season_selector_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"/>
            </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List of episodes ("
                    android:textColor="?attr/FG_color"
                    android:paddingStart="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/e"
                    tools:ignore="HardcodedText,RtlSymmetry" />
                <TextView
                    android:id="@+id/selected_seasonShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="?attr/AccentColor"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/e"
                    tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=")"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/e"
                        tools:ignore="HardcodedText" />
            </LinearLayout>





            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/anime_episodes_selector_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"/>
            </HorizontalScrollView>




        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Recommended  Animes"
            android:fontFamily="@font/e"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="?attr/AccentColor"
            tools:ignore="HardcodedText" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/animeWatchRecommendation"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:padding="10dp"
            android:scrollbars="none"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:descendantFocusability="afterDescendants"
            android:nextFocusLeft="@id/btnMovies"
            android:nestedScrollingEnabled="false"
            tools:ignore="RtlSymmetry" />











    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>