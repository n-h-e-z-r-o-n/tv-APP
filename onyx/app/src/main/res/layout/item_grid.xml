<!-- res/layout/item_grid.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/grid_item_width"
    android:layout_height="@dimen/grid_item_height"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    android:foreground="@drawable/card_focus">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="15dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/itemText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/BG_color"
                android:ellipsize="end"
                android:text="2015"
                android:gravity="center"
                android:padding="1dp"
                android:rotationX="0"
                android:singleLine="true"
                android:textColor="?attr/FG_color"
                android:textSize="9sp" />

        </androidx.cardview.widget.CardView>

        <!-- 🔥 Focus Overlay -->
        <LinearLayout
            android:id="@+id/focusOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:gravity="bottom"
            android:visibility="gone"
            android:paddingBottom="2dp"
            android:paddingTop="14dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            >

            <TextView
                android:id="@+id/showTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="false"
                android:text="Show Title Here"
                android:textColor="?attr/BG_color"
                android:textSize="7sp"
                android:fontFamily="sans-serif-medium"
                tools:ignore="SmallSp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="3"
                >


            <TextView
                android:id="@+id/showRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="7.5 imdb"
                android:textColor="?attr/FG_color"
                android:textSize="5sp"
                android:fontFamily="sans-serif-medium"
                tools:ignore="SmallSp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/showRS"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="⏱145 min"
                android:textColor="?attr/FG_color"
                android:textSize="5sp"
                android:fontFamily="sans-serif-medium"
                tools:ignore="SmallSp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:gravity="center"
                />

                <TextView
                    android:id="@+id/showType"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Tv"
                    android:textColor="?attr/FG_color"
                    android:textSize="5sp"
                    android:fontFamily="sans-serif-medium"
                    tools:ignore="SmallSp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>