<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="?attr/BG_color"
    tools:context=".PayWall">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="273dp"
            android:layout_height="154dp"
            android:contentDescription="@string/app_name"
            android:src="@raw/logo"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"/>

        <!-- Welcome Text -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="Unlimited Movies &amp; TV Shows"
            android:textColor="?attr/BG_color_up"
            android:textSize="16sp" />

        <!-- Payment Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- Premium Plan Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Premium Plan"
                        android:textColor="?attr/FG_color"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="?attr/BG_color_up"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="BEST VALUE"
                        android:textColor="?attr/FG_color"
                        android:textSize="10sp" />

                </LinearLayout>

                <!-- Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="$"
                        android:textColor="?attr/FG_color"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="9.99"
                        android:textColor="?attr/FG_color"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:alpha="0.7"
                        android:text=" / lifetime"
                        android:textColor="?attr/FG_color"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Features List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="✓"
                            android:textColor="?attr/BG_color_up"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unlimited Movies &amp; TV Shows"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="✓"
                            android:textColor="?attr/BG_color_up"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4K Ultra HD Quality"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="✓"
                            android:textColor="?attr/BG_color_up"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Ads Experience"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="✓"
                            android:textColor="?attr/BG_color_up"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Multiple Device Support"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Purchase Button -->
                <Button
                    android:id="@+id/btnPurchase"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/button_gradient"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:text="Buy App"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:elevation="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Terms and Privacy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.6"
            android:gravity="center"
            android:text="By purchasing, you agree to our Terms of Service and Privacy Policy"
            android:textColor="?attr/FG_color"
            android:textSize="10sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

                <ImageView
                    android:id="@+id/paywallShow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/FG_color"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/overlay_left_gradient"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/PaymentContainer"
            android:layout_width="450dp"
            android:layout_height="450dp"
            app:cardBackgroundColor="?attr/BG_color_up"
            android:layout_gravity="center"
            android:elevation="5dp"
            app:cardCornerRadius="15dp"
            android:visibility="visible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:scrollbars="none"
                >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- Close Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/btnClosePayment"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_background"
                        android:gravity="center"
                        android:text="×"
                        android:textColor="?attr/FG_color"
                        android:textSize="20sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="4dp"
                        android:nextFocusUp="@id/btnCompletePayment"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <!-- Card Information Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card information"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Card Number Input with Icons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/input_background"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp">

                        <EditText
                            android:id="@+id/etCardNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="1234 1234 1234 1234"
                            android:textColorHint="#666666"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:maxLength="19" />

                        <!-- Payment Method Icons -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/visa"/>

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/master_card" />

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/master_card_2"
                                />

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="20dp"
                                android:src="@drawable/google_pay"
                                 />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Expiry and CVC Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp">

                        <!-- Expiry Date -->
                        <EditText
                            android:id="@+id/etExpiryDate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_background"
                            android:hint="MM / YY"
                            android:textColorHint="#666666"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:maxLength="5"
                            android:paddingHorizontal="12dp"
                            android:gravity="center_vertical" />

                        <!-- CVC -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="1dp"
                            android:background="@drawable/input_background"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp">

                            <EditText
                                android:id="@+id/etCVC"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:hint="CVC"
                                android:textColorHint="#666666"
                                android:textColor="?attr/FG_color"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="4"
                                android:gravity="center_vertical" />

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/circle_background"
                                android:elevation="4dp"
                                android:gravity="center"
                                android:text="123"
                                android:textColor="?attr/BG_color_up"
                                android:textSize="8sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Cardholder Name Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardholder name"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etCardholderName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/input_background"
                        android:hint="Full name on card"
                        android:textColorHint="#666666"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="12dp"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <!-- Country Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country or region"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etCountry"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/input_background"
                        android:hint="Country"
                        android:textColorHint="#666666"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="12dp"
                        android:gravity="center_vertical" />



                </LinearLayout>

                <!-- Payment Button -->
                <Button
                    android:id="@+id/btnCompletePayment"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/button_gradient"
                    android:text="Complete Payment"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_margin = "15dp"
                    android:elevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:nextFocusDown="@id/btnClosePayment"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            </ScrollView>

        </androidx.cardview.widget.CardView>


    </FrameLayout>

</LinearLayout>