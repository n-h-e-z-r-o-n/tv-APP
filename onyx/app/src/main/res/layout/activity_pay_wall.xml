<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="?attr/BG_color"
    tools:context=".PayWall">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="700dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/paywallShow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/FG_color"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/overlay_left_gradient"/>
        </FrameLayout>

    <LinearLayout
        android:id="@+id/payInfo"
        android:layout_width="420dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="12dp"
        tools:ignore="RtlSymmetry">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="273dp"
            android:layout_height="154dp"
            android:contentDescription="@string/app_name"
            android:src="@raw/logo"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"/>

        <!-- Welcome Text -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:gravity="center"
            android:text="Unlimited Movies &amp; TV Shows"
            android:textColor="?attr/FG_color"
            android:textSize="18sp" />

        <!-- Payment Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!-- Premium Plan Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Premium Plan"
                        android:textColor="?attr/FG_color"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/headerBadgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="?attr/BG_color_up"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="BEST VALUE"
                        android:textColor="?attr/FG_color"
                        android:textSize="11sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <!-- Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/priceCurrencyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="KSh"
                        android:textColor="?attr/FG_color"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/priceAmountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="20"
                        android:textColor="?attr/FG_color"
                        android:textSize="34sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/pricePeriodText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:alpha="0.7"
                        android:text="/ month"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <!-- Features List -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="✓"
                            android:textColor="?attr/BG_color_up"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unlimited Movies &amp; TV Shows"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="✓"
                            android:textColor="?attr/BG_color_up"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No Ads Experience"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="✓"
                            android:textColor="?attr/BG_color_up"
                            android:textSize="16sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Software Update Support"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Purchase Button -->
                <Button
                    android:id="@+id/btnPurchase"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/button_gradient"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-medium"
                    android:text="Unlock Premium"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:elevation="5dp"
                    tools:ignore="HardcodedText" />

                <!-- Secure payments line -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secure payments by IntaSend"
                        android:textColor="?attr/FG_color"
                        android:alpha="0.6"
                        android:textSize="11sp"
                        tools:ignore="HardcodedText,SmallSp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Terms and Privacy -->
        <TextView
            android:id="@+id/termsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.6"
            android:gravity="center"
            android:text="By purchasing, you agree to our Terms of Service and Privacy Policy"
            android:textColor="?attr/FG_color"
            android:textSize="10sp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:ignore="HardcodedText,SmallSp" />

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/PaymentContainer"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/BG_color_up"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="0dp"
        android:elevation="6dp"
        app:cardCornerRadius="16dp"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Close Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="ONYX"
                        android:fontFamily="@font/a"
                        android:textSize="45sp"
                        android:textColor="?attr/FG_color"
                        tools:ignore="HardcodedText"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/btnClosePayment"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/circle_background"
                        android:text="×"
                        android:gravity="center"
                        android:textColor="?attr/FG_color"
                        android:textSize="20sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp"
                        android:layout_gravity="end"
                        tools:ignore="HardcodedText"
                        android:nextFocusDown="@+id/planMonthly"
                        android:nextFocusLeft="@+id/btnClosePayment"
                        android:nextFocusRight="@+id/btnClosePayment"
                        android:nextFocusUp="@+id/btnClosePayment"/>
                </LinearLayout>

                <!-- PLAN SELECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose your plan"
                    android:textColor="?attr/FG_color"
                    android:textSize="17sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/d"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:id="@+id/planGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/planMonthly"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/tv_button_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:padding="6dp"
                        android:nextFocusDown="@+id/rbMpesa"
                        android:nextFocusUp="@+id/btnClosePayment"
                        android:nextFocusRight="@+id/planQuarterly"
                        android:nextFocusLeft="@+id/planYearly"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly\nKSh 20"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:fontFamily="@font/i"
                            tools:ignore="HardcodedText,SmallSp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/planQuarterly"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/tv_button_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:padding="6dp"
                        android:nextFocusDown="@+id/rbMpesa"
                        android:nextFocusUp="@+id/btnClosePayment"
                        android:nextFocusRight="@+id/planYearly"
                        android:nextFocusLeft="@+id/planMonthly">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quarterly\nKSh 50"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:fontFamily="@font/i"
                                tools:ignore="HardcodedText,SmallSp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save 9%"
                                android:textColor="@android:color/white"
                                android:alpha="0.8"
                                android:textSize="10sp"
                                tools:ignore="HardcodedText,SmallSp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/planYearly"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/tv_button_selector"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:padding="6dp"
                        android:nextFocusDown="@+id/rbMpesa"
                        android:nextFocusUp="@+id/btnClosePayment"
                        android:nextFocusRight="@+id/planMonthly"
                        android:nextFocusLeft="@+id/planQuarterly">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yearly\nKSh 180"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:gravity="center"
                                android:fontFamily="@font/i"
                                tools:ignore="HardcodedText,SmallSp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save 17%"
                                android:textColor="@android:color/white"
                                android:alpha="0.8"
                                android:textSize="10sp"
                                tools:ignore="HardcodedText,SmallSp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <!-- PAYMENT METHOD SELECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method"
                    android:textColor="?attr/FG_color"
                    android:textSize="17sp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/d"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                <LinearLayout
                    android:id="@+id/paymentMethodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">


                    <LinearLayout
                        android:id="@+id/rbMpesa"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:background="@drawable/tv_button_selector"
                        android:nextFocusLeft="@+id/rbGooglePay"
                        android:nextFocusRight="@+id/rbCard"
                        android:nextFocusUp="@+id/planMonthly"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_mpesa"
                            tools:ignore="ContentDescription" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M-Pesa / XB"
                            android:textColor="@android:color/white"
                            android:textSize="8sp"
                            android:fontFamily="@font/i"
                            android:layout_marginStart="2dp"
                            tools:ignore="HardcodedText,SmallSp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rbCard"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:background="@drawable/tv_button_selector"
                        android:nextFocusLeft="@+id/rbMpesa"
                        android:nextFocusRight="@+id/rbGooglePay"
                        android:nextFocusUp="@+id/planMonthly"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/master_card"
                            tools:ignore="ContentDescription" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credit Card"
                            android:textColor="@android:color/white"
                            android:textSize="8sp"
                            android:fontFamily="@font/i"
                            android:layout_marginStart="2dp"
                            tools:ignore="HardcodedText,SmallSp"
                            />

                    </LinearLayout>





                    <LinearLayout
                        android:id="@+id/rbGooglePay"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:background="@drawable/tv_button_selector"
                        android:nextFocusLeft="@+id/rbCard"
                        android:nextFocusRight="@+id/rbMpesa"
                        android:nextFocusUp="@+id/planMonthly"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/google_pay"
                            tools:ignore="ContentDescription" />


                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Pay"
                            android:textColor="@android:color/white"
                            android:textSize="8sp"
                            android:fontFamily="@font/i"
                            android:layout_marginStart="2dp"
                            tools:ignore="HardcodedText,SmallSp"
                            />

                    </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <!-- M-PESA PAYMENT FIELDS -->
                <LinearLayout
                    android:id="@+id/mpesaSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M-Pesa Information"
                        android:fontFamily="@font/g"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter your M-Pesa phone number"
                        android:textColor="?attr/FG_color"
                        android:textSize="9sp"
                        android:layout_marginTop="8dp"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/etMpesaPhone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/input_background"
                        android:hint="07XX XXX XXX"
                        android:textColorHint="#666666"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:inputType="phone"
                        android:paddingHorizontal="12dp"
                        android:gravity="center_vertical"
                        tools:ignore="Autofill,HardcodedText"
                        android:nextFocusUp="@+id/rbMpesa"
                        android:nextFocusDown="@+id/spCountry"
                        android:nextFocusRight="@+id/etMpesaPhone"
                        android:nextFocusLeft="@+id/etMpesaPhone"/>

                    <Spinner
                        android:id="@+id/spCountry"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/tv_button_selector"
                        android:spinnerMode="dropdown"
                        android:entries="@array/payment_countries"
                        android:paddingHorizontal="2dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:nextFocusUp="@+id/etMpesaPhone"
                        android:nextFocusDown="@+id/btnMpesaPayment"
                        android:nextFocusRight="@+id/spCountry"
                        android:nextFocusLeft="@+id/spCountry"/>

                    <ProgressBar
                        android:id="@+id/MpesaProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateTint="?attr/AccentColor"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminate="true" />

                    <!-- PAYMENT BUTTON -->
                    <Button
                        android:id="@+id/btnMpesaPayment"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/button_gradient"
                        android:text="Initiate payment"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="24dp"
                        android:elevation="2dp"
                        tools:ignore="HardcodedText"
                        android:nextFocusUp="@+id/spCountry"
                        android:nextFocusDown="@+id/rbMpesa"
                        android:nextFocusRight="@+id/btnMpesaPayment"
                        android:nextFocusLeft="@+id/btnMpesaPayment"/>

                      <TextView
                          android:id="@+id/mpesaFeedbackBox"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_gravity="center"
                          android:maxLines="3"
                          android:layout_marginTop="8dp"
                          android:text=""
                          android:textSize="10dp"
                          android:textColor="?attr/FG_color"
                          android:alpha="0.6"
                          tools:ignore="SpUsage"/>

                </LinearLayout>

                <!-- CARD PAYMENT SECTION -->
                <LinearLayout
                    android:id="@+id/cardSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card Information"
                        android:fontFamily="@font/g"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        tools:ignore="HardcodedText" />

                    <!-- Card Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/input_background"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp">

                        <EditText
                            android:id="@+id/etCardNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="1234 1234 1234 1234"
                            android:textColorHint="#666666"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:maxLength="19"
                            android:nextFocusDown="@+id/etExpiryDate"
                            android:nextFocusLeft="@+id/etCardNumber"
                            android:nextFocusRight="@+id/etCardNumber"

                            tools:ignore="Autofill,HardcodedText" />

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="20dp"
                            android:src="@drawable/visa"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <!-- Expiry and CVC -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp">

                        <EditText
                            android:id="@+id/etExpiryDate"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_background"
                            android:hint="MM / YY"
                            android:textColorHint="#666666"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:maxLength="5"
                            android:paddingHorizontal="12dp"
                            android:gravity="center_vertical"
                            tools:ignore="HardcodedText,TextFields"
                            android:nextFocusUp="@+id/etCardNumber"
                            android:nextFocusDown="@+id/etCardholderName"
                            android:nextFocusLeft="@+id/etCVC"
                            android:nextFocusRight="@+id/etCVC"/>

                        <EditText
                            android:id="@+id/etCVC"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="1dp"
                            android:background="@drawable/input_background"
                            android:hint="CVC"
                            android:textColorHint="#666666"
                            android:textColor="?attr/FG_color"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:maxLength="4"
                            android:paddingHorizontal="12dp"
                            android:gravity="center_vertical"
                            tools:ignore="Autofill,HardcodedText"
                            android:nextFocusUp="@+id/etCardNumber"
                            android:nextFocusDown="@+id/etCardholderName"
                            android:nextFocusLeft="@+id/etExpiryDate"
                            android:nextFocusRight="@+id/etExpiryDate"/>
                    </LinearLayout>

                    <!-- Cardholder Name -->
                    <EditText
                        android:id="@+id/etCardholderName"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/input_background"
                        android:hint="Cardholder Name"
                        android:textColorHint="#666666"
                        android:textColor="?attr/FG_color"
                        android:textSize="14sp"
                        android:inputType="textPersonName"
                        android:paddingHorizontal="12dp"
                        android:gravity="center_vertical"
                        tools:ignore="Autofill,HardcodedText"
                        android:nextFocusUp="@+id/etExpiryDate"
                        android:nextFocusDown="@+id/btnVisaCompletePayment"
                        android:nextFocusLeft="@+id/etCardholderName"
                        android:nextFocusRight="@+id/etCardholderName"/>


                    <!-- PAYMENT BUTTON -->
                    <Button
                        android:id="@+id/btnVisaCompletePayment"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/button_gradient"
                        android:text="Complete Payment"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="24dp"
                        android:elevation="2dp"
                        tools:ignore="HardcodedText"
                        android:nextFocusUp="@+id/etCardholderName"
                        android:nextFocusDown="@+id/rbCard"
                        android:nextFocusLeft="@+id/btnVisaCompletePayment"
                        android:nextFocusRight="@+id/btnVisaCompletePayment"
                        />
                </LinearLayout>



            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>

    </FrameLayout>
</LinearLayout>