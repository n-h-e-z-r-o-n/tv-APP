<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/BG_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="45dp"
            tools:ignore="RtlSymmetry"
            android:nextFocusLeft="@id/btnFav">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/FavBackdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/overlay_bottom_gradient"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:alpha="0.5"/>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/overlay_left_gradient"
                    android:orientation="horizontal"
                    android:layout_gravity="start" />

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="bottom"
                    android:layout_marginBottom="182dp"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/FavTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="Sakamoto Days Part 2"
                        android:singleLine="false"
                        android:textColor="?attr/FG_color"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/h"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/FavGenre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Action"
                        android:singleLine="false"
                        android:textColor="?attr/FG_color"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:paddingEnd="5dp"
                        android:paddingStart="0dp"
                        android:fontFamily="sans-serif"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/FavType"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:ellipsize="end"
                            android:maxLines="7"
                            android:text="Mv"
                            android:singleLine="false"
                            android:textColor="?attr/FG_color"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingEnd="15dp"
                            android:paddingStart="0dp"
                            />

                        <TextView
                            android:id="@+id/FavRating"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:ellipsize="end"
                            android:maxLines="7"
                            android:text="9.7 imdb"
                            android:singleLine="false"
                            android:textColor="?attr/FG_color"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            />
                        <TextView
                            android:id="@+id/FavYear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="2025"
                            android:singleLine="false"
                            android:textColor="?attr/FG_color"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            />

                        



                    </LinearLayout>

                    <TextView
                        android:id="@+id/FavOverview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="bottom"
                        android:ellipsize="end"
                        android:maxLines="10"
                        android:singleLine="false"
                        android:textColor="?attr/FG_color"
                        android:textSize="13sp"
                        android:layout_marginBottom="20dp"
                        />

                    <LinearLayout
                        android:id="@+id/RemoveFaveItem"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:background="@drawable/tv_button_selector"
                        android:nextFocusLeft="@+id/sideBar"
                        android:paddingStart="9dp"
                        android:paddingEnd="9dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/remove_fave"
                            app:tint="?attr/AccentColor"
                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remove From Favorites"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/i"
                            android:textSize="8sp"
                            android:layout_marginStart="2dp"
                            tools:ignore="HardcodedText,SmallSp"
                            android:alpha="0.6"
                            />

                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favoritesRecycler"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:layout_gravity="bottom"
                android:scrollbars="none"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/emptyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No favorites yet. Add some from a show page."
                android:textColor="?attr/FG_color"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/titleFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:textColor="?attr/BG_color"
                android:textSize="9sp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:visibility="gone"/>


        </FrameLayout>

        <include layout="@layout/side_bar"/>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




