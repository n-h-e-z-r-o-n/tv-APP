<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG_color"
    tools:context=".Search_Page">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="41dp"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">

                <!-- Top Search Bar -->
                <LinearLayout
                    android:id="@+id/searchBarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="24dp"
                    android:background="#1A1F2B"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    >

                    <ImageButton
                        android:id="@+id/iconSearch"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="12dp"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:nextFocusForward="@+id/searchInput"
                        android:nextFocusRight="@+id/searchInput"
                        android:nextFocusLeft="@+id/side_bar"
                        android:src="@drawable/ic_search"
                        app:tint="@color/nav_icon_color_selector" />

                    <EditText
                        android:id="@+id/searchInput"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:background="@drawable/tv_edittext_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:hint="Search movies, shows, people"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:minHeight="56dp"
                        android:nextFocusDown="@+id/SearchResults"
                        android:nextFocusLeft="@+id/iconSearch"
                        android:nextFocusRight="@+id/SearchResults"
                        android:padding="16dp"
                        android:singleLine="true"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#8C94A7"
                        android:textSize="18sp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/SearchResults"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:nextFocusUp="@+id/searchInput"
                    android:overScrollMode="never"
                    android:padding="10dp"
                    android:scrollbars="none" />
            </LinearLayout>

            <include layout="@layout/side_bar"/>

        </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>