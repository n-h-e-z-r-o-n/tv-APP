<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="#191C27"
    tools:context=".Video_payer">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/BG_color"
        app:show_buffering="when_playing"
        app:show_rewind_button="false"
        app:show_fastforward_button="false"
        app:resize_mode="fill"
        app:use_controller="false"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Custom overlay controls -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false">

        <!-- Bottom controls bar -->
        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="0dp"
            android:layout_height="134dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/overlay_bottom_gradient"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="9dp"
                android:layout_gravity="end">

                <!-- Speed button -->
                <ImageButton
                    android:id="@+id/btn_speed"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/speed"
                    android:text="1x"
                    app:tint="@color/nav_icon_color_selector"/>

                <!-- Mute button -->
                <ImageButton
                    android:id="@+id/btn_mute"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    app:tint="@color/nav_icon_color_selector" />

                <!-- Subtitles button -->
                <ImageButton
                    android:id="@+id/btn_subtitles"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="@color/nav_icon_color_selector" />

                <!-- Quality button -->
                <TextView
                    android:id="@+id/btn_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Auto"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:gravity="center" />

                <!-- Refresh button -->
                <ImageButton
                    android:id="@+id/btn_refresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@android:drawable/ic_popup_sync"
                    app:tint="@color/nav_icon_color_selector" />

                <!-- Settings button -->
                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@drawable/setting"
                    app:tint="@color/nav_icon_color_selector" />

                <!-- Close button -->
                <ImageButton
                    android:id="@+id/btn_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="Close"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:tint="@color/nav_icon_color_selector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_rewind"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Rewind"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:src="@android:drawable/ic_media_rew"
                    app:tint="@color/nav_icon_color_selector"/>

                <ImageButton
                    android:id="@+id/btn_play_pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Play/Pause"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    app:tint="@color/nav_icon_color_selector"
                    android:src="@android:drawable/ic_media_play" />

                <ImageButton
                    android:id="@+id/btn_fast_forward"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Fast Forward"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:src="@android:drawable/ic_media_ff"
                    app:tint="@color/nav_icon_color_selector"/>

                <TextView
                    android:id="@+id/txt_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:text="00:00" />

                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:max="1000"
                    android:progress="0"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:text="00:00" />
            </LinearLayout>

        </LinearLayout>

        <!-- Center overlay for feedback -->
        <FrameLayout
            android:id="@+id/center_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>