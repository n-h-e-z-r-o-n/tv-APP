
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:elevation="2dp"
        android:layout_margin="5dp"
        android:focusable="true"
        android:foreground="@drawable/item_episode_focus"
        android:clickable="true"
        android:background="?attr/BG_color_up"
        android:layout_marginBottom="8dp">

        <FrameLayout
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:background="?attr/BG_color_up"
            tools:srcCompat="@tools:sample/avatars">

                <ImageView
                    android:id="@+id/Ep_IMG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="?attr/BG_color_up"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_gravity="right"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/overlay_right_gradient"
                    tools:ignore="RtlHardcoded" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp">


            <TextView
                android:id="@+id/episode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Episode Title"
                android:textColor="?attr/FG_color"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/episode_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="45 min"
                    android:textColor="?attr/FG_color"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/episode_Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="5/7"
                    android:textColor="?attr/FG_color"
                    android:textSize="8sp"
                    android:layout_marginStart="7dp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <TextView
                android:id="@+id/episode_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="Episode description..."
                android:textColor="?attr/FG_color"
                android:textSize="5sp"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

