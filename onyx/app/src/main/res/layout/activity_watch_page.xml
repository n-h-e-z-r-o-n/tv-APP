<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Watch_Page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#191C27">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <!-- Poster + title block -->
            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"/>

                <!-- Backdrop image -->
                <ImageView
                    android:id="@+id/backdropImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#111111"
                    android:scaleType="centerCrop" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@drawable/overlay_bottom_gradient"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="0dp"
                    android:gravity="center"
                    tools:ignore="RtlSymmetry"
                    >

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="200dp"
                        android:layout_height="330dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        card_view:cardCornerRadius="14dp"
                        card_view:cardElevation="6dp"
                        android:foreground="@drawable/card_focus">
                        <ImageView
                            android:id="@+id/posterImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="0dp"
                        tools:ignore="RtlSymmetry">


                        <TextView
                            android:id="@+id/year_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="2025"
                            android:textColor="#AAAAAA"
                            android:textSize="14sp"  />

                        <TextView
                            android:id="@+id/title_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily=""
                            android:maxLines="2"
                            android:text="Movie Title"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold" />


<!-- ========================================================================================    -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="start"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:paddingEnd="0dp"
                            >

                            <TextView
                                android:id="@+id/Genres_widget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- Science fiction    - drama   - action"
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:textStyle="italic"
                                />

                            <TextView
                                android:id="@+id/Production_widget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- Marvel    - DC   - action"
                                android:textColor="#AAAAAA"
                                android:textSize="9sp"
                                android:textStyle="italic"
                                android:layout_marginTop="5dp"
                                />

                        </LinearLayout>
<!-- ========================================================================================    -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="start"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:paddingEnd="0dp" >

                            <!-- Runtime -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:paddingEnd="0dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â± "
                                    android:textColor="#FFFFFF"
                                    android:textSize="11sp" />
                                <TextView
                                    android:id="@+id/Runtime_widget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8.5/10"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <!-- Runtime -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:layout_marginStart="15dp"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ”Š "
                                    android:textColor="#FFFFFF"
                                    android:textSize="11sp" />
                                <TextView
                                    android:id="@+id/Subtitle_widget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Subtitles"
                                    android:textColor="#FFFFFF"
                                    android:textFontWeight="700"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <!-- Pg -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:layout_marginStart="15dp"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â¬¤ PG : "
                                    android:textColor="#FFFFFF"
                                    android:textSize="11sp" />
                                <TextView
                                    android:id="@+id/PG_widget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="13"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <!-- Rating -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:layout_marginStart="15dp"
                                >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â¬¤ Imdb : "
                                    android:textColor="#FFFFFF"
                                    android:textSize="11sp" />
                                <TextView
                                    android:id="@+id/Rating_widget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8.5/10"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="11sp" />
                            </LinearLayout>




                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="460dp"
                            android:layout_height="92dp"
                            android:layout_gravity="bottom"
                            android:gravity="start"
                            android:maxHeight="145dp"
                            android:orientation="horizontal"
                            android:padding="4dp"
                            android:paddingEnd="0dp">

                            <TextView
                                android:id="@+id/overview_widget"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:maxLines="4"
                                android:singleLine="false"
                                android:text="Loading . . ."
                                android:textColor="@android:color/white"
                                android:textSize="15sp" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="start"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:paddingEnd="0dp">

                            <!-- This is our custom expanding button -->
                            <Button
                                android:id="@+id/watchNowButton"
                                android:layout_width="44dp"
                                android:layout_height="40dp"
                                android:background="@drawable/tv_button_selector"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:textColor="@android:color/white"
                                android:textSize="15sp"
                                android:text="â–¶"
                                />

                            <Button
                                android:id="@+id/TrailerButton"
                                android:layout_width="44dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/tv_button_selector"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:text="ðŸŽ¬"
                                android:textColor="@android:color/white"
                                android:textSize="15sp" />

                            <Button
                                android:id="@+id/favoriteButton"
                                android:layout_width="44dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/tv_button_selector"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:text="ðŸ¤"
                                android:textColor="@android:color/white"
                                android:textSize="15sp" />
                        </LinearLayout>

                </LinearLayout>

                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="24dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/Season_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#1A1D2A"
                    android:visibility="visible">

                    <!-- Season Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/seasons_episodes"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:background="#333333" />

                        <TextView
                            android:id="@+id/season_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Seasons"
                            android:textColor="#AAAAAA"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Season Selector -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:clipToPadding="false"
                        android:paddingHorizontal="8dp">

                        <LinearLayout
                            android:id="@+id/season_selector_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <!-- Season 1 Button -->
                            <Button
                                android:id="@+id/season_1_btn"
                                android:layout_width="120dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="8dp"
                                android:text="Season 1"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:background="@drawable/tv_button_selector"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:stateListAnimator="@null" />


                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Season Info -->
                    <LinearLayout
                        android:id="@+id/season_info_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/current_season_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="#333333" />

                        <TextView
                            android:id="@+id/episode_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#AAAAAA"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:background="#333333" />

                        <TextView
                            android:id="@+id/season_year_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#AAAAAA"
                            android:textSize="14sp" />

                    </LinearLayout>


                    <!-- Episodes List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/episodes_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        />

                </LinearLayout>


            </FrameLayout>

            <!-- Cast -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Cast_widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:padding="10dp"
                    android:paddingHorizontal="32dp"
                    android:scrollbars="none"
                    tools:layout_editor_absoluteY="8dp" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:text="More like this"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Recommendations -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="24dp"
                android:scrollbars="none">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Recommendation_widget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:padding="10dp"
                    android:paddingHorizontal="32dp"
                    android:scrollbars="none"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteY="8dp" />


            </FrameLayout>

            <!-- Overview -->


            <!-- Buttons -->

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>