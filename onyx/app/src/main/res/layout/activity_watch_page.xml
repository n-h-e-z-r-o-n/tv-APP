<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".Watch_Page"
    android:background="?attr/BG_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="?attr/BG_color">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <!-- Poster + title block -->
            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:focusable="true"/>

                <!-- Backdrop image -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    tools:ignore="RtlHardcoded">

                    <!-- Backdrop image -->
                    <ImageView
                        android:id="@+id/backdropImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        />

                    <!-- Gradient overlay -->
                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/overlay_left_gradient"
                        android:alpha="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/overlay_bottom_gradient"
                        android:alpha="1"/>

                </FrameLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="0dp"
                    android:gravity="center"
                    tools:ignore="RtlSymmetry"

                    >

                    <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="200dp"
                        android:layout_height="330dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        card_view:cardCornerRadius="14dp"
                        card_view:cardElevation="0dp"
                        card_view:cardBackgroundColor="@android:color/transparent"
                        android:foreground="@drawable/card_focus"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/posterImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:background="@android:color/transparent"
                            />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="0dp"
                        tools:ignore="RtlSymmetry">





                        <TextView
                            android:id="@+id/title_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:maxWidth="400dp"
                            android:text="Movie Title"
                            android:textColor="?attr/FG_color"
                            android:fontFamily="@font/b"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"
                            android:shadowColor="#80000000"
                            android:shadowDx="5"
                            android:shadowDy="6"
                            android:shadowRadius="4"/>

                        <TextView
                            android:id="@+id/season_C"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text=""
                            android:textStyle="italic|bold"
                            android:textColor="?attr/BG_color_up"
                            android:textSize="9sp"
                            tools:ignore="SmallSp"
                            android:layout_marginBottom="10dp"/>


                            <TextView
                                android:id="@+id/Production_widget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- Marvel    - DC   - action"
                                android:textColor="?attr/FG_color"
                                android:textSize="9sp"
                                android:textStyle="italic"
                                tools:ignore="HardcodedText,SmallSp"
                                android:alpha="0.8"/>

<!-- ========================================================================================    -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity=""
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingEnd="0dp" >

                            <!-- VoteCount -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:layout_marginEnd="15dp"
                                android:alpha="0.5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="★★★★☆ "
                                    android:textColor="#FFFFFF"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />
                                <TextView
                                    android:id="@+id/VoteCount_widget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="342323"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <!-- Rating -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:layout_marginEnd="15dp"
                                android:alpha="0.5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="IMDB "
                                    android:textColor="#FFFFFF"
                                    android:textSize="11sp"
                                    tools:ignore="HardcodedText"
                                    android:textStyle="bold"/>
                                <TextView
                                    android:id="@+id/Rating_widget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8.5/10"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    tools:ignore="HardcodedText" />

                            </LinearLayout>

                            <!-- Runtime -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:paddingEnd="0dp"
                                android:alpha="0.5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⏱ "
                                    android:textColor="#FFFFFF"
                                    android:textSize="11sp"
                                    tools:ignore="HardcodedText" />
                                <TextView
                                    android:id="@+id/Runtime_widget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2h 3min"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <!-- Year -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:layout_marginStart="15dp"
                                android:alpha="0.5">

                                <TextView
                                    android:id="@+id/year_widget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:text="2025"
                                    android:textColor="?attr/FG_color"
                                    android:textSize="11sp"
                                    tools:ignore="HardcodedText"
                                    android:textStyle="bold"    />
                            </LinearLayout>

                            <!-- Pg -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:orientation="horizontal"
                                android:layout_marginStart="15dp"
                                android:alpha="0.5">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PG "
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    tools:ignore="HardcodedText" />
                                <TextView
                                    android:id="@+id/PG_widget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="13"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="11sp"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <!-- Runtime -->

                                <ImageView
                                    android:layout_marginStart="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_hdr"
                                    app:tint="?attr/FG_color"
                                    android:textSize="11sp"
                                    android:alpha="0.7"/>

                                <ImageView
                                    android:layout_marginStart="0dp"
                                    android:layout_width="24dp"
                                    android:layout_height="18dp"
                                    android:src="@drawable/ic_caption"
                                    app:tint="?attr/FG_color"
                                    android:textSize="11sp"
                                    android:alpha="0.7"/>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/Genres_widget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Science fiction     drama   - action"
                            android:textColor="?attr/FG_color"
                            android:textSize="11sp"
                            tools:ignore="HardcodedText"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="start"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:paddingEnd="0dp" >

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="460dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="start"
                            android:maxHeight="145dp"
                            android:orientation="horizontal"
                            android:paddingEnd="0dp"
                            android:layout_marginBottom="9dp">

                            <TextView
                                android:id="@+id/overview_widget"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:ellipsize="end"
                                android:maxLines="6"
                                android:singleLine="false"
                                android:text="An assassin, trained in the ways of the Ruska Roma, embarks on a quest for vengeance following the death of her father."
                                android:textColor="?attr/FG_color"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText"
                                android:shadowColor="#80000000"
                                android:shadowDx="5"
                                android:shadowDy="6"
                                android:shadowRadius="4"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingEnd="0dp">

                            <!-- This is our custom expanding button -->
                            <ImageButton
                                android:id="@+id/watchNowButton"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/tv_button_selector"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:src="@drawable/ic_play"
                                app:tint="?attr/AccentColor"
                                android:textAllCaps="false"
                                android:nextFocusLeft="@+id/serverButton"
                                android:nextFocusRight="@+id/TrailerButton"
                                android:tooltipText="Play"
                                android:elevation="2dp"
                                tools:ignore="UnusedAttribute" />

                            <ImageButton
                                android:id="@+id/TrailerButton"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/tv_button_selector"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:src="@drawable/ic_trailer"
                                app:tint="?attr/AccentColor"                                android:textSize="14sp"
                                android:textAllCaps="false"
                                android:nextFocusLeft="@+id/watchNowButton"
                                android:nextFocusRight="@+id/favoriteButton"
                                android:tooltipText="Trailer"
                                android:elevation="2dp"
                                tools:ignore="UnusedAttribute" />

                            <ImageButton
                                android:id="@+id/favoriteButton"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/tv_button_selector"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:src="@drawable/ic_addfave"
                                app:tint="?attr/AccentColor"
                                android:textColor="?attr/AccentColor"
                                android:textAllCaps="false"
                                android:tooltipText="Add to Favorites"
                                android:nextFocusLeft="@+id/TrailerButton"
                                android:nextFocusRight="@+id/serverButton"
                                android:elevation="4dp"
                                tools:ignore="UnusedAttribute" />

                            <ImageButton
                                android:id="@+id/serverButton"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:layout_marginStart="12dp"
                                android:background="@drawable/tv_button_selector"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:src="@drawable/ic_server"
                                app:tint="?attr/AccentColor"
                                android:textAllCaps="false"
                                android:tooltipText="Change Server"
                                android:nextFocusLeft="@+id/favoriteButton"
                                android:nextFocusRight="@+id/watchNowButton"
                                android:elevation="2dp"
                                tools:targetApi="26" />
                        </LinearLayout>

                </LinearLayout>

                </LinearLayout>


            </FrameLayout>



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Season_widget"
                android:paddingTop="8dp"
                android:paddingBottom="24dp"
                android:scrollbars="none"
                android:visibility="gone">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"

                    >

                    <!-- Season Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seasons"
                            android:textColor="?attr/AccentColor"
                            android:fontFamily="@font/d"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText"
                            android:alpha="0.8"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:background="?attr/BG_color_up" />

                        <TextView
                            android:id="@+id/season_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Seasons"
                            android:alpha="0.7"
                            android:fontFamily="@font/g"
                            android:textColor="?attr/FG_color"
                            android:textSize="11sp"
                            android:textStyle="italic|bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <!-- Season Selector -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:clipToPadding="false"
                        android:paddingHorizontal="8dp">

                        <LinearLayout
                            android:id="@+id/season_selector_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <!-- Season 1 Button -->
                            <Button
                                android:id="@+id/season_1_btn"
                                android:layout_width="120dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="8dp"
                                android:text="Season 1"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:background="@drawable/tv_button_selector"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:stateListAnimator="@null" />


                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Season Info -->
                    <LinearLayout
                        android:id="@+id/season_info_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/current_season_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/FG_color"
                            android:textSize="18sp"
                            android:textStyle="italic|bold"
                            android:alpha="0.8"/>

                        <View
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                            />

                        <TextView
                            android:id="@+id/episode_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/FG_color"
                            android:textSize="13sp"
                            android:textStyle="italic"
                            android:alpha="0.8"/>

                        <View
                            android:layout_width="50dp"
                            android:layout_height="0dp"
                             />

                        <TextView
                            android:id="@+id/season_year_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/FG_color"
                            android:textSize="13sp"
                            android:textStyle="italic"
                            android:alpha="0.8"/>

                    </LinearLayout>


                    <!-- Episodes List -->
                    <include android:layout_height="50dp" layout="@layout/laod_animation"
                        tools:ignore="IncludeLayoutParam" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/episodes_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        />

                </LinearLayout>


            </FrameLayout>

            <!-- Cast   -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:gravity="center_horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Cast_widget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:padding="10dp"
                    android:paddingHorizontal="32dp"
                    android:scrollbars="none"
                    tools:layout_editor_absoluteY="8dp"
                    android:gravity="center" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:text=" You may also like"
                android:fontFamily="@font/d"
                android:textColor="?attr/AccentColor"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Recommendation_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:padding="10dp"
                    android:paddingHorizontal="32dp"
                    android:scrollbars="none"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteY="8dp"
                    android:descendantFocusability="afterDescendants"/>




        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>