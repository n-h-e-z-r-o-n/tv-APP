<?xml version="1.0" encoding="utf-8"?>
<!-- Weâ€™ll make the card scale up and change color when focused. -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Focused / Hover state -->
        <item android:state_focused="true">
            <shape android:shape="rectangle">
                <solid android:color="#1a3d6d" /> <!-- highlight background -->
                <corners android:radius="12dp" />
                <stroke android:width="2dp" android:color="#4fa3ff" />
            </shape>
        </item>

        <!-- Default state -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#132" />
                <corners android:radius="12dp" />
            </shape>
        </item>
</selector>
